<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Text">
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.03125</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="Text.Bold" parent="Text">
        <item name="fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="Text.SemiBold" parent="Text">
        <item name="fontFamily">@font/open_sans_semibold</item>
    </style>


    <style name="Text.Content" parent="Text">
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">textStart</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Content.Currency" parent="Text.Content">
        <item name="fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="Text.Name" parent="Text.Bold">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Title" parent="Text.Name">
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.05</item>
        <item name="android:textColor">@color/color_accent</item>
    </style>

    <style name="Text.Title.Row" parent="Text.SemiBold">
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.1</item>
        <item name="android:textColor">@color/color_accent</item>
    </style>

</resources>